{
  "manifest_version": 2,
  "name": "Measure",
  "description": "Measure typographic line lengths right from the page",
  "version": "1.0.1",
  "author" : "Rowan Cavanagh",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "32": "icons/icon32.png",
      "38": "icons/icon38.png"
    },
    "default_title": "Measure"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "permissions": [
    "activeTab"
  ]
}